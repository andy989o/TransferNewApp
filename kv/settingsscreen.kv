#:import utils kivy.utils
<SettingsScreen>:
    FloatLayout:
        canvas:
            Color: 
                rgb: utils.get_color_from_hex("#10828A")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#0E676E")
                Rectangle:    
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 2, .12
        Label:
            # Settings Label
            background_color: 0, 153, 153
            pos_hint: {"top": 1.04, "left": 1}
            size_hint: 1, .2
            text: "Settings"
            bold: True
            font_size: (root.width**2 + root.height**2) / 13**4
        Button:
            text: "Logout"
            pos_hint: {"x":0.35, "top":0.45}
            size_hint: 0.35, 0.15
            on_press: app.change_screen("login_screen")

        GridLayout:
            # Menu Buttons
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            
            Button:
                id: progress_button
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("progress_screen")
                Image:
                    source: "icons/progress_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y          
            Button:
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("support_screen")
                Image:
                    source: "icons/support_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 
            Button:
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("settings_screen")
                Image:
                    id: settings_button
                    source: "icons/settings_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 