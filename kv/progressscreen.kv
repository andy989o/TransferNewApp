#:import utils kivy.utils
<ProgressScreen>:
    FloatLayout:
        canvas:
            Color: 
                rgb: utils.get_color_from_hex("#10828A")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#0E676E")
                Rectangle:    
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 2, .12
        Label:
            # Progress Label
            background_color: 0, 153, 153
            bold: True
            pos_hint: {"top": 1.04, "left": 1}
            size_hint: 1, .2
            text: "Progress"
            font_size: (root.width**2 + root.height**2) / 13**4

        Label:
            id: progress_label
            text: "I've Been Alcohol Free For:"
            bold: True
            pos_hint: {'y':.34}
            font_size: (root.width**2 + root.height**2) / 15**4
        Label:
            id: streak
            text: ""
            bold: True
            pos_hint: {'y':.22}
            font_size: (root.width**2 + root.height**2) / 9.5**4
        Label:
            text: "Days"
            bold: True
            pos_hint: {'y':.1}
            font_size: (root.width**2 + root.height**2) / 15**4
        ProgressBar:
            id: progress_bar
            value: 0
            min: 0
            max: 30
            pos_hint: {'x':.1, 'y':.2}
            size_hint: (.8, .7)
        Button:
            text: "Pledge"
            on_press: root.pledge()
            pos_hint: {'x':.425, 'y':.45}
            size_hint: 0.15, 0.05

        Label:
            text: "Number of Urges Resisted:"
            bold: True
            pos_hint: {"x": -.04, "top": .5}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4
        Label:
            id: urges_label
            text: ""
            bold: True
            pos_hint: {"x": .17, "top": .5}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4

        Label:
            text: "Money Saved (USD):"
            bold: True
            pos_hint: {"x": -.04, "top": .45}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4
        Label:
            id: money_label
            text: ""
            bold: True
            pos_hint: {"x": .17, "top": .45}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4
        
        Label:
            text: "Calories Not Consumed:"
            bold: True
            pos_hint: {"x": -.04, "top": .4}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4
        Label:
            id: calories_label
            text: ""
            bold: True
            pos_hint: {"x": .17, "top": .4}
            size_hint: 1, .2
            font_size: (root.width**2 + root.height**2) / 15**4
        
        GridLayout:
            # Menu Buttons
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            
            Button:
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("progress_screen")
                Image:
                    id: progress_button
                    source: "icons/progress_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y            
            Button:
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("support_screen")
                Image:
                    source: "icons/support_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 
            Button:
                background_color: 0, 0, 0, 0
                on_press:
                    app.change_screen("settings_screen")
                Image:
                    source: "icons/settings_icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 